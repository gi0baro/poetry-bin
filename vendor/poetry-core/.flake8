[flake8]
max-line-length = 88
ignore = E501, E203, W503
per-file-ignores = __init__.py:F401
exclude =
    .git
    __pycache__
    setup.py
    build
    dist
    releases
    .venv
    .tox
    .mypy_cache
    .pytest_cache
    .vscode
    .github
    poetry_core/_vendor/
    poetry_core/utils/_compat.py
    poetry_core/utils/_typing.py
    tests/fixtures/
    tests/masonry/fixtures/
